<% include ../partials/header %>

<div class="container"> 
    <header class="jumbotron">
        <div id="main_container" class="container">
            <h1>Welcome to GoCamp!</h1>
            <p>View beautiful campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
            <% if (campgrounds.length < 1) { %>
                <div class="col_centered">
                    <h3>No campgrounds to show!</h3>
                </div>
            <% } else { %>
            <% campgrounds.forEach( function (campground) { %>
            <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%= campground.image %>">
                        <div class="caption">
                            <h3><%= campground.name %></h3>
                        </div>
                        <p>
                            <a class="btn btn-info" href="/campgrounds/<%=campground._id%>">More Info</a>
                        </p>
                    </div>
            </div>
            <% }); %>
        <% } %>
    </div>
</div>
<% include ../partials/footer %>