<% include ../partials/header %>

<div class="container">
    <h1 id="access_header">Edit profile</h1>
    <div class="col_centered">
        <form  action="/user/<%= user._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="bio">Bio</label>
                <textarea class="form-control" type="text" name="bio" maxlength=75><%=user.bio%></textarea>
            </div>
            <div class="form-group">
                <label for="firstName">First name</label>
                <input class="form-control" type="text" name="firstName" maxlength=15 value="<%= user.firstName %>">
            </div>
            <div class="form-group">
                <label for="lastName">Last name</label>
                <input class="form-control" type="text" name="lastName" maxlength=15 value="<%= user.lastName %>">
            </div>
            <div class="form-group">
                <label for="email">Email address</label>
                <input class="form-control" type="email" name="email" value="<%= user.email %>">
            </div>
            <div class="form-group">
                <label for="avatar">Avatar</label>
                <input class="form-control" type="text" name="avatar" value="<%= user.avatar %>">
            </div>
            <div class="form-group">
                <label for="adminCode">Admin code</label>
                <input class="form-control" type="password" name="adminCode" placeholder="admin code, if applicable">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Edit</button>
            </div>
            <div class="form-group back_btn">
                <a class="btn btn-xs btn-info" href="/user/<%= user.id %>">Go Back</a>
            </div>
        </form>
    </div>
</div>

<% include ../partials/footer %>