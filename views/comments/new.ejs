<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add new comment to <%= campground.name %></h1>
        <div style="width: 50%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group form-group-lg">
                    <label for="comment[text]">Comment</label>
                    <textarea class="form-control" type="text" name="comment[text]" placeholder="text"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
                <div class="form-group back_btn">
                    <a class="btn btn-xs btn-info" href="/campgrounds/<%= campground._id %>">Go Back</a>
                </div>
            </form>
            
        </div>
    </div>
</div>

<% include ../partials/footer %>